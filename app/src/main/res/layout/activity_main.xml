<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSelectVideo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/select_video" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/tvSelectVideo"
            android:gravity="center_vertical"
            android:text="Select video"
            android:textSize="27dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgGallery"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gallery" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:id="@+id/tvGallery"
            android:text="Gallery"
            android:textSize="27dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSlideshow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/slideshow_maker" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:id="@+id/tvSlideshow"
            android:text="Slideshow maker"
            android:textSize="27dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSettings"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/setting" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:id="@+id/tvSettings"
            android:text="Settings"
            android:textSize="27dp" />

    </LinearLayout>
</LinearLayout>